<script>

    function showInfo(){
      console.log("getting here");
      var editInfo = $("#change_box").val();
      console.log($("#change_box").val());
      bootbox.confirm({
        title: "<b>Please confirm your ticket edit:<b>",
        message: "<b>Info to be added to the changelog:</b><br>"+ editInfo,
        buttons: {
            confirm: {
              label: 'Submit',
              class: 'btn-success',    
        },
          cancel: {
            label: 'Go back',
            class: 'btn-danger'
        }
        },
        callback: function (result) { 
          if(result){        
            postData();
            window.location.href = "/edit-success";
          }
        }
      });
    }
